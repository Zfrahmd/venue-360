<div class="container">
  <div class="row">
    <div class="d-flex justify-content-center align-items-center">
      <div class="p-2 mt-5" >  
        <h2>Sign up for New Account</h2>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field mt-4">
            <%= f.label :first_name %><br />
            <%= f.email_field :first_name, autofocus: true, autocomplete: "first-name", class: "form-control"%>
          </div>

          <div class="field mt-4">
            <%= f.label :last_name %><br />
            <%= f.email_field :last_name, autofocus: true, autocomplete: "last-name", class: "form-control"%>
          </div>
  
          <div class="field mt-4">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"%>
          </div>

          <div class="field mt-4">
            <%= f.label :password %><br />
            <% if @minimum_password_length %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          </div>

            <div class="d mt-4">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

          <div class="actions mt-3">
            <%= f.submit "Sign up", class: "btn btn-outline-custom" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>  
    </div>
  </div>  
</div>