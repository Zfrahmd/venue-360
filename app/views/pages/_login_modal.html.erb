<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {id:"loginForm"}) do |f| %>
  <div class="modal fade" id="loginModal" tabindex="-1" aria-hidden="true">
      <div class="modal-dialog">
          <div class="modal-content">
              <div class="modal-header border-0">
                  <h5 class="modal-title">Log in</h5>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
              </div>
              <div class="modal-body">
                  <div class="mb-3">
                      <label for="loginEmail" class="form-label">Email</label>
                      <%= f.text_field :email, class:'form-control', id:"loginEmail" %>
                  </div>
                  <div class="mb-3">
                      <label for="loginPassword" class="form-label">Password</label>
                      <%= f.password_field :password, class:'form-control', id:"loginPassword" %>
                  </div>
                  <%= f.submit 'Sign in', class: " btn btn-outline-custom" %>
                  <div class="text-center mt-3">
                      Don't have an account? <a href="#" id="switchToSignup" data-bs-toggle="modal" data-bs-target="#signupModal" data-bs-dismiss="modal">Sign up</a>
                  </div>
                  <!--<div class="text-center mt-2">
                      <a href="#" id="adminLoginLink" data-bs-toggle="modal" data-bs-target="#adminLoginModal" data-bs-dismiss="modal">Admin login</a>
                  </div>-->
              </div>
          </div>
      </div>
  </div>`
<% end %>