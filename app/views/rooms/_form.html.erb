            <%= form_with(model: @room, local: true, html: {class: "contact100-form validate-form" })  do |f| %>
              <span class="contact100-form-title">
                  Create a New Listing for Room
              </span>
              <div class="wrap-input100 validate-input" data-validate="First Name is required">
                  <%= f.text_field :name, class:"input100", placeholder: "Room Name" %>
                  <span class="focus-input100"></span>
